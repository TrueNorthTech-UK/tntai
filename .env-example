# True North Tech AI Agent System - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED: Anthropic API Configuration
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# ============================================
# REQUIRED: Cloudflare Configuration
# ============================================
# Your Cloudflare account ID
CLOUDFLARE_ACCOUNT_ID=3084a71c3a01c15a95432e43c1abb895

# Your Chief of Staff worker URL (set after deployment)
TRUENORTH_URL=https://truenorth-chief-of-staff.YOUR_SUBDOMAIN.workers.dev

# ============================================
# OPTIONAL: GitHub Integration
# ============================================
# Personal access token for GitHub API (for code commits)
# Get from: https://github.com/settings/tokens
# Scopes needed: repo, workflow
GITHUB_TOKEN=ghp_YOUR_TOKEN_HERE

# Your GitHub username
GITHUB_USERNAME=YOUR_USERNAME

# Default repository for code commits
GITHUB_REPO=YOUR_REPO

# ============================================
# OPTIONAL: Additional Integrations
# ============================================
# Sentry DSN (for error monitoring)
SENTRY_DSN=

# Slack webhook (for notifications)
SLACK_WEBHOOK_URL=

# Discord webhook (for notifications)
DISCORD_WEBHOOK_URL=

# ============================================
# OPTIONAL: Development Settings
# ============================================
# Environment (development, staging, production)
ENVIRONMENT=production

# Enable debug logging
DEBUG=false

# Maximum concurrent workflows
MAX_CONCURRENT_WORKFLOWS=10

# Default timeout for agent tasks (seconds)
AGENT_TIMEOUT=30

# ============================================
# OPTIONAL: Cost Controls
# ============================================
# Maximum API cost per workflow (USD)
MAX_WORKFLOW_COST=5.00

# Alert email when monthly costs exceed threshold
COST_ALERT_EMAIL=

# Monthly budget limit (USD)
MONTHLY_BUDGET_LIMIT=100.00